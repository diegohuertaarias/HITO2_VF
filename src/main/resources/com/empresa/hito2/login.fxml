<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.empresa.hito2.LoginController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="10.0">
        <GridPane alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Username:" />
            <Label text="Password:" GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="loginButton" onAction="#login" text="Login" />
            <Button fx:id="registerButton" onAction="#register" text="Register" />
        </HBox>
    </VBox>
</AnchorPane>
